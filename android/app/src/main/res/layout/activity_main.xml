<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/vibration_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="누르면 진동이 울리지비"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bluetooth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bluetooth"
        app:layout_constraintEnd_toEndOf="@+id/vibration_Button"
        app:layout_constraintStart_toStartOf="@+id/vibration_Button"
        app:layout_constraintTop_toBottomOf="@+id/vibration_Button" />
</androidx.constraintlayout.widget.ConstraintLayout>